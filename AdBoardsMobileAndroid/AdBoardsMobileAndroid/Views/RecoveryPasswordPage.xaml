<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AdBoardsMobileAndroid.Views.RecoveryPasswordPage"
             Title="Восстановление пароля"
             BackgroundColor="#FFFFFF">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Margin="20,10,20,10">
                <Entry x:Name="tbEmail" Placeholder="Электронная почта..." 
                       FontSize="Title" 
                       Keyboard="Email"/>
                <Button x:Name="btnSend" Text="Отправить письмо"
                        Margin="0,20,0,0"
                        Clicked="btnSend_Clicked"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>