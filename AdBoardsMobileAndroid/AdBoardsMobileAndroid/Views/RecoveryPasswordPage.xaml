<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AdBoardsMobileAndroid.Views.RecoveryPasswordPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Margin="20,10,20,10">
                <Label Text="Восстановление пароля" HorizontalOptions="CenterAndExpand"/>
                <Entry x:Name="tbEmail" Placeholder="Электронная почта..." 
                       FontSize="Title" 
                       Keyboard="Email"/>
                <Button x:Name="btnSend" Text="Отправить код"
                        Margin="0,20,0,0"/>
                <Entry x:Name="tbCode" Placeholder="Код..." 
                       FontSize="Title" 
                       Keyboard="Telephone"/>
                <Entry x:Name="tbPassword1" Placeholder="Пароль..." 
                       FontSize="Title" IsPassword="True"/>
                <Entry x:Name="tbPassword2" Placeholder="Повтор пароля..." 
                       FontSize="Title" IsPassword="True"/>
                <Button x:Name="btnRecoverPass" Text="Установить пароль"
                        Margin="0,20,0,0"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>